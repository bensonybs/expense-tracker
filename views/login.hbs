<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">登入</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="email" class="mb-2">帳號(電子郵件)</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-primary btn-block">登入</button>
        <a href="/auth/facebook" class="btn btn-outline-primary btn-block">Facebook 登入</a>
      </form>
      <p class="lead mt-4">
        還沒有帳號? <a href="/users/register" class="btn btn-light btn-block btn-outline-dark">註冊一個</a>
      </p>
    </div>
  </div>
</div>